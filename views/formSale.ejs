<form id="formRegistroSales">
  <input type="text" class="form-control" id="ID" style="display: none;">

  <div class="form-group">
    <label for="nombre_cliente">Nombre Cliente:</label>
    <input type="text" class="form-control" id="nombre_cliente" name="nombre cliente">
  </div>

  <div class="form-group">
    <label for="nombre_producto">Direccion Producto:</label>
    <input type="text" class="form-control" id="nombre_producto" name="nombre producto">
  </div>


  <div class="form-group">
    <label for="">Selecciona el producto</label>
    <select class="form-control" id="producto" name="producto">
      <option value="0">Selecciona el producto</option>
      <% productos.forEach(function(producto){ %>
      <option value="<%= producto.id %>"><%= producto.nombre %></option>
      <% }); %>
    </select>
  </div>

  <div class="form-group">
    <label for="cantidad">Cantidad:</label>
    <input type="number" class="form-control" id="cantidad" name="cantidad">
  </div>


  <br>
</form>