<!DOCTYPE html>
<html lang="en">

<head><%- include ("templates/header.ejs")%></head>

<body>
    <div>
        <%- include ("templates/navbar.ejs")%>
    </div>
    <br>
    <br>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h1><%= title %></h1>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Descipcion</th>
                            <th scope="col">Categoria</th>
                            <th scope="col">Cantidad</th>
                            <th scope="col">Precio</th>
                            <th scope="col">Editar</th>
                            <th scope="col">Eliminar</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let i = 0; i < data.length; i++) { %>
                        <tr>
                            <td><%= data[i].ID %></td>
                            <td><%= data[i].Nombre %></td>
                            <td><%= data[i].Descripcion %></td>
                            <td><%= data[i].Categoria %></td>
                            <td><%= data[i].Cantidad %></td>
                            <td><%= data[i].Precio %></td>

                            <td><i class="bi bi-pencil"></i></td>
                            <td>
                                <button type="button" class="btn btn-danger" %>'">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                        <% } %>
                    </tbody>

                </table>



                <button type="button" class="btn custom-btn" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    Agregar nuevo producto
                </button>

                <%- include ("templates/popUp.ejs", { modalTitle: 'Agregar nuevo producto', modalContent: 'formProduct.ejs' , button: 'Guardar', script: 'nombreSccript' })%>


            </div>
        </div>
    </div>


    <script src="js/toast.js"></script>


</body>

</html>